%div.row
  %div.small-12.large-5.columns#google-map-aerial
    = loading_spinner()

  %div.small-12.large-7.columns#institutions_list
    - @institutions.each do |institution|
      %div.institution.row
        %div.small-12.large-6.columns
          =link_to institution.name, institution_path(institution), class: "row small-12 large-12 institution-name"
          %p.row.small-12.large-12.institution-distance= "Distance: " + getDistance(institution).to_s
          %p.row.small-12.large-12.institution-hours= getHours(institution.id)
          %div.row.small-8.large-8= link_to("View More Details", "/institution/" + institution.id.to_s)
        %div.small-12.large-6.columns
          %ul.small-block-grid-5.large-block-grid-5.amenities-list
            - institution.amenities.each do |amenity|
              %li
                =embedded_amenity(amenity)
                
