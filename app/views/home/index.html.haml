%div#home_index
  %div#logo
    %div.row
      %div.small-6.large-6.columns= image_tag "logo.png"
      %div.small-6.large-6.columns= t('home.statement')
    %div#search.row.collapse
      %div.small-10.columns
        = search_field_tag :query, t('home.search_placeholder')
      %div.small-2.columns
        = button_tag "Go!"
  %div#categories
    %p= "Search by categories"
    %ul.categories.small-block-grid-2.large-block-grid-5
      //This is just temporary until we get images
      - categories = ["Clothing", "Food", "Bus Tickets", "Storage", "Recreation", "Shelter", "Hygiene", "Medical", "Hotlines", "Employment"]
      - categories.each do |cat|
        %li
          %div.row= embedded_svg("categories/" + cat + ".svg", class: "category-img")
          %div.row= cat
