
= render 'shared/search'

%div
  %h3= "Showing [....]"
  %ul#filter-settings.small-block-grid-2.large-block-grid-8
    %li.toggle
      %div.filter-title= "Number of People"
      %button#btn-individual.filter-btn-deselected= "Individual"
      %button#btn-family.filter-btn-deselected= "Family"
    %li.toggle
      %div.filter-title= "Gender"
      %button#btn-male.filter-btn-deselected= "Male"
      %button#btn-female.filter-btn-deselected= "Female"
    %li.toggle
      %div.filter-title= "Age"
      %input#btn-age.filter-btn-deselected{:type=>"number", :placeholder=>"Enter your age"}
    %li.toggle
      %div.filter-title= "Disability"
      %button#btn-physical.filter-btn-deselected= "Physical"
      %button#btn-mental.filter-btn-deselected= "Mental"
    %li.toggle
      %div.filter-title= "Miscellaneous"
      %button#btn-veteran.filter-btn-deselected= "Veteran"
      %button#btn-victimofabuse.filter-btn-deselected= "Victim of Abuse"
    %li.vertical_line
    %li.filter
      %div.filter-title= "Show"
      %button#btn-all.filter-btn-deselected= "All"
      %button#btn-opennow.filter-btn-deselected= "Open Now"
    %li.filter
      %div.filter-title= "Sort By"
      %button#btn-distance.filter-btn-deselected= "Distance"
      %button#btn-name.filter-btn-deselected= "Name"

%div.row
  %div.small-11.large-5.columns#google-map-aerial
    = loading_spinner()

  %div.small-12.large-7.columns#institutions_list
    - @institutions.each do |institution|
      %div.institution.row
        %div.small-6.large-6.columns
          %h3.row.small-12.large-12.institution-name= institution.name
          %p.row.small-12.large-12.institution-distance= "Distance: " + getDistance(institution).to_s
          %p.row.small-12.large-12.institution-hours= getHours(institution.id)
          %div.row
            %div.small-4.large-4.columns
            %div.small-8.large-8.columns= link_to("View More Details", "/institution/" + institution.id.to_s)
        %div.small-6.large-6.columns
          %ul.small-block-grid-2.medium-block-grid-3.large-block-grid-4.amenities-list
            - institution.amenities.each do |amenity|
              %li
                =embedded_amenity(amenity)
                
