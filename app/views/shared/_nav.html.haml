%nav
  %div.row
    %div.columns.small-2
      = link_to(root_path) do
        = image_tag "logo_black.png", class: "logo-nav"
    
    %div.columns.small-1
    
    = breadcrumbs()

    %div#menu.columns.small-5
      %div#nav-right
        = link_to("/about") do
          %button= "About"
        - if user_signed_in?
          =link_to("/capacity") do
            %button#account-link= "Account"
          =link_to(destroy_user_session_path, :method => :delete) do
            %button#sign-out= "Shelter Sign Out"
        - else
          =link_to("/users/sign_in") do
            %button#sign-in= "Shelter Sign In"

