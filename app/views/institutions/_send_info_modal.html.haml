%div#institution-modal.reveal-modal.tiny{ :data => { :reveal => true }}
  %span.modal-close-button= "x"
  %div.small-block-grid-3
    %div#send-email
      = label_tag "What email should we send it to?"
      = email_field_tag :email, nil, { placeholder: "name@example.com", pattern: "email" }
      %small.error= "You must have a valid email for us to email you."
    %div#send-text
      = label_tag "What number should we send it to?"
      = telephone_field_tag :sms, nil, { placeholder: "0123456789", pattern: "^\\d{10}$" }
      %small.error= "Please enter your 10 digit phone number (including area code)."
    %div#notify-options
      = form_tag('/sms/info', id: "institution-modal-form", data: { remote: true, abide: true } ) do
        = hidden_field_tag :message_type
        = hidden_field_tag :institution_id, @institution.id
        %h5= "What information do you want to send?"
        %ul
          %li
            = check_box_tag :address, "", true
            = label_tag "Address"
          %li
            = check_box_tag :phone, "", true
            = label_tag "Phone Number"
          %li
            = check_box_tag :amenities, "", true
            = label_tag "Amenities"
          %li
            = check_box_tag :restrictions, "", true
            = label_tag "Restrictions"
          %li
            = check_box_tag :hours, "", true
            = label_tag "Hours"
    %button#send-information{ type: "submit" }= "Send Information"
