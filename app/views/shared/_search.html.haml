%div#search
  - if @search_label.present?
    %h3= t('home.search_name') 
  %div.row.collapse
    = form_tag institutions_path, :method => 'get' do
      %div.small-11.large-11.columns.search
        =text_field_tag :search, params[:search], placeholder: t('home.search_placeholder')
      %div.small-1.large-1.columns.search
        =submit_tag "", :class => "search postfix"
