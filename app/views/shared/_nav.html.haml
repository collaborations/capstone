%div.fixed
  %nav.top-bar{ "data-topbar" => true, "role" => "navigation" }
    %ul.title-area
      %li
        = link_to(root_path) do
          = image_tag "logo.png", class: "logo-nav"
    %section.top-bar-section
      %ul.right
        %li
          = link_to "About", "/about"
        - if user_signed_in?
          %li.has-dropdown
            %a= "Menu"
            %ul.dropdown
              %li= link_to("Account", account_path)
              %li= link_to("Capacity Tracking", capacity_index_path(current_user.institution_id))
              %li= link_to("Edit Profile", edit_institution_path(current_user.institution_id))
              %li= link_to("Mass Text", mass_text_path)
              %li= link_to("Sign Out", destroy_user_session_path, { :method => :delete })
        - else
          %li
            =link_to("Sign In", "/users/sign_in")
            
    %section.middle
      = yield :breadcrumbs

