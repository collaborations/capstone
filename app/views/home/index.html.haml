%div#home_index
  %div#logo
    %div.row.header
      %div.small-6.large-6.columns= image_tag "logo_black.png"
      %div.small-6.large-6.columns.statement= t('home.statement')
    %div.row.collapse
      %div.small-11.columns
        = search_field_tag :query, t('home.search_placeholder')
      %div.small-1.columns
        = button_tag(image_tag("search.png"))
  %div#categories
    %h3.search-label= t('home.search_label')
    %ul.categories.small-block-grid-2.large-block-grid-5
      //This is just temporary until we get images
      - categories = ["Clothing", "Food", "Bus Tickets", "Storage", "Recreation", "Shelter", "Hygiene", "Medical", "Hotlines", "Employment"]
      - categories.each do |cat|
        %li
          = link_to("categories/" + cat) do
            %div.row.category-bg
              %div.category-img= embedded_svg("categories/" + cat + ".svg", class: "category-img")
            %div.row.category-label= cat
