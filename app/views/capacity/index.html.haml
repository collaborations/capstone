%h2= "Shelter Name"
%div#tracker
  %div#capacity_header
    %h3= "Capacity Tracker"
    %p= t('capacity.description.capacity')
    %p= t('capacity.description.update_detail')
  %h3#capacity-warning= "WARNING: You have gone above your max capacity."

  - if @max_capacity_prompt
    %p= "It looks like you haven't set your max capacity yet. The tracker will still work though."
  %div#capacity_view{:align => "center"}
  / GRAPH GETS INJECTED HERE

  %ul#capacity_controls.small-block-grid-2.medium-block-grid-2.large-block-grid-2
    %li.small-2.large-4.columns
      %div#reserved.svg=embedded_svg "cap_add_button.svg", class: "icon"
    %li.small-4.large-4.columns
      %div.svg-label= "Reserved Spots"
    %li.small-6.large-4.columns
      %div#reserved-del.svg=embedded_svg "cap_delete_button.svg", class: 'icon delete'


  %div#remaining-capacity.row
    %div.small-3.columns
    %div.small-3.columns
      %p#remaining-label= "Remaining Capacity:"
    %div.small-3.columns
      %h3#remaining= @total
    %div.small-3.columns

  %ul#capacity_controls_del.small-block-grid-2.medium-block-grid-2.large-block-grid-2
    %li
      %div#standby.svg=embedded_svg "cap_add_button.svg", class: "icon"
    %li
      %div#svg-label= "Standby Spot"
    %li
      %div#standby-del.svg=embedded_svg "cap_delete_button.svg", class: 'icon delete'
    